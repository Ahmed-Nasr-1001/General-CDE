@model ACC.ViewModels.Security.LogInUserVM
@{
    ViewData["Title"] = "LogIn";
    Layout = "_RegisterLayout";
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    * {
        box-sizing: border-box;
    }

    .login-container {
        height: 100vh;
        display: flex;
        overflow: hidden;
    }

    .login-section,
    .image-section {
        height: 100%;
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-section {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 40px;
    }

    .image-section {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        position: relative;
        overflow: hidden;
    }

    .login-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.08);
        padding: 48px 42px;
        max-width: 420px;
        width: 100%;
        position: relative;
    }

        .login-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #3b82f6, #6366f1);
        }

    .welcome-section {
        text-align: center;
        margin-bottom: 40px;
    }

    .welcome-title {
        font-size: 30px;
        font-weight: 700;
        color: #1f2937;
        margin-bottom: 8px;
    }

    .welcome-subtitle {
        color: #6b7280;
        font-size: 15px;
        margin-bottom: 32px;
    }

    .user-avatar {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #e5e7eb, #d1d5db);
        border-radius: 50%;
        margin: 0 auto 32px;
        position: relative;
        overflow: hidden;
    }

        .user-avatar::before,
        .user-avatar::after {
            content: '';
            position: absolute;
            border-radius: 50%;
        }

        .user-avatar::before {
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #9ca3af;
        }

        .user-avatar::after {
            width: 32px;
            height: 32px;
            background: #374151;
            top: 16px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 2;
        }

        .user-avatar .user-body {
            position: absolute;
            bottom: -4px;
            left: 50%;
            transform: translateX(-50%);
            width: 52px;
            height: 32px;
            background: #374151;
            border-radius: 52px 52px 0 0;
            z-index: 2;
        }

    .form-section {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-label {
        font-weight: 600;
        color: #374151;
        display: block;
        margin-bottom: 8px;
    }

    .form-control {
        width: 100%;
        padding: 14px 18px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        background-color: #fafafa;
        font-size: 15px;
        color: #1f2937;
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #3b82f6;
            outline: none;
            background-color: white;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

    .form-check-container {
        display: flex;
        align-items: center;
        margin: 24px 0 32px;
        padding: 16px 18px;
        background-color: #f9fafb;
        border: 1px solid #e5e7eb;
        border-radius: 12px;
    }

    .form-check-input {
        margin-right: 12px;
        transform: scale(1.2);
        accent-color: #3b82f6;
    }

    .form-check-label {
        color: #374151;
        font-size: 14px;
        font-weight: 500;
    }

    .btn-login {
        width: 100%;
        padding: 16px 28px;
        background: linear-gradient(135deg, #1e40af, #3b82f6);
        color: white;
        font-weight: 600;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-login:hover {
            background: linear-gradient(135deg, #1d4ed8, #2563eb);
            box-shadow: 0 12px 32px rgba(59, 130, 246, 0.35);
            transform: translateY(-2px);
        }

    .text-danger {
        color: #dc2626;
        font-size: 12px;
        margin-top: 6px;
        display: block;
    }

    .brand-section {
        text-align: center;
        color: white;
        padding: 40px;
        max-width: 500px;
    }

    .brand-title {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 8px;
    }

    .brand-subtitle {
        font-size: 24px;
        font-weight: 600;
        color: #94a3b8;
        margin-bottom: 20px;
    }

    .brand-description {
        font-size: 16px;
        color: #cbd5e1;
        line-height: 1.6;
    }
</style>

<div class="login-container">
    <div class="login-section">
        <div class="login-card">
            <div class="welcome-section">
                <h1 class="welcome-title">Welcome Back</h1>
                <p class="welcome-subtitle">Please sign in to your account</p>

                <div class="user-avatar">
                    <div class="user-body"></div>
                </div>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger text-center py-2 px-3 mb-3" style="font-size: 14px;">
                    @foreach (var error in ViewData.ModelState[""].Errors)
                    {
                        <p class="mb-0">@error.ErrorMessage</p>
                    }
                </div>

            }

            <div class="form-section">
                <form asp-action="LogIn" method="post" id="loginForm">
                    <div class="form-group">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-check-container">
                        <input class="form-check-input" asp-for="RememberMe" type="checkbox" />
                        <label class="form-check-label" for="@Html.IdFor(m => m.RememberMe)">
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Sign In" class="btn-login" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="image-section">
        <div class="brand-section">
            <h1 class="brand-title">CDEngine</h1>
            <h2 class="brand-subtitle">Common Data Environment</h2>
            <p class="brand-description">
                Centralized platform for secure data management, collaboration, and analytics across your organization.
            </p>
        </div>
    </div>
</div>

<script>
    document.getElementById('loginForm').addEventListener('submit', function () {
        const submitBtn = this.querySelector('input[type="submit"]');
        submitBtn.disabled = true;
        submitBtn.classList.add('loading');
    });
</script>

<partial name="_ValidationScriptsPartial" />
