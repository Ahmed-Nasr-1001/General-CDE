@model DataLayer.Models.Document

<style>
    .min-table-height {
        min-height: 400px;
    }
</style>

<div class="mb-4">
    <h4 class="text-primary fw-bold">
        <i class="bi bi-folder-fill me-2"></i>
        Folder: @Model.Folder.Name
    </h4>
    <hr />
</div>

<div class="table-responsive shadow rounded min-table-height">
    <table class="table table-hover align-middle mb-0 bg-white">
        <thead class="table-light text-uppercase">
            <tr>
                <th>File Name</th>
                <th>File Type</th>
                <th>Created Date</th>
                <th>Created By</th>
                <th class="text-center">Versions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <i class="bi bi-file-earmark-text me-2 text-secondary"></i>
                    <strong>@Model.Name</strong>
                </td>
                <td>
                    <span class="badge bg-info text-dark">@Model.FileType</span>
                </td>
                <td>@Model.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@Model.CreatedBy</td>
                <td class="text-center">
                    <div class="d-flex justify-content-center align-items-center gap-2">
                        <span class="badge bg-primary">@Model.Versions?.Count</span>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-secondary border-0" type="button" id="versionDropdown-@Model.Id" data-bs-toggle="dropdown" aria-expanded="false" title="More actions">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="versionDropdown-@Model.Id">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Versions", "ProjectDocument", new { documentId = Model.Id, projectId = ViewBag.ProjectId })">
                                        <i class="bi bi-clock-history me-2 text-primary"></i> Show Versions
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>